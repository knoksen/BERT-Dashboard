# EditorConfig helps maintain consistent coding styles
# https://editorconfig.org

root = true

[*]
charset = utf-8
end_of_line = lf
indent_size = 2
indent_style = space
insert_final_newline = true
trim_trailing_whitespace = true

[*.md]
max_line_length = off
trim_trailing_whitespace = false

[*.{json,yml,yaml}]
indent_size = 2

[*.{ts,tsx,js,jsx}]
indent_size = 2
max_line_length = 120

[*.html]
indent_size = 2

[*.css]
indent_size = 2

[{package.json,.prettierrc,.eslintrc}]
indent_size = 2

[Makefile]
indent_style = tab
